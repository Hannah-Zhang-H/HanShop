@* for user to sign up *@

@model HanShop.Models.User
@{
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
<link href="~/Content/myStyle.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">





@* breadcrumb *@
<nav aria-label="breadcrumb" class="p-5 " style="color: white !important;">
    <ol class="breadcrumb ">
        <li class="breadcrumb-item"><a href="/Home/Index" style="color: white !important;">Home Page</a></li> &nbsp; /
        <li class="breadcrumb-item"><a href="#" style="color: white !important;"> User Sign up</a></li>
    </ol>
</nav>





<body class="cm-login" style="background-image: url(/Content/Resources/otherImgs/userSignup.jpg); background-size: cover; background-position:left;">

    <div class="text-center" style="padding: 90px 0 30px 0; border-bottom: 1px solid #ddd;">

        <h1 style="font-family:'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif">
            Han's Shopping Centre User  <a href="/Home/Signup" class="link-warning display-3" style="text-decoration:underline;">Sign up</a> <span> &verbar; </span> <a href="/Home/Login" class="link-danger" style="text-decoration:underline;"> Log in</a>
        </h1>
    </div>



    <div class="col-sm-6 col-md-4 col-lg-3" style="margin:40px auto; float: none;">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

        <div class="col-xs-12">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group p-2" >
                <label>User Name</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter user name" , @style = "border:2px solid green;" } })
                    @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group p-2">
                @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter your password", @style = "border:2px solid green;" } })
                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })

                </div>
            </div>
            <div class="form-group p-2">
                <span>Enter your password again</span>
                <div class="col-md-10">
                    <input type="password" name="passwordAgain" class="form-control" placeholder="Confirm your password" style = "border:2px solid green;" />
                    @Html.ValidationMessage("passwordAgain", "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group p-2">
                @Html.LabelFor(model => model.Nickname, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Nickname, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter your nickname", @style = "border:2px solid green;" } })
                    @Html.ValidationMessageFor(model => model.Nickname, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group p-2">
                @Html.LabelFor(model => model.Gender, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.RadioButton("Gender", "Other", true) <label for="GenderOther">Other</label>
                    @Html.RadioButton("Gender", "Female") <label for="GenderFemale">Female</label>
                    @Html.RadioButton("Gender", "Male") <label for="GenderMale">Male</label>

                </div>
            </div>
            <div class="form-group p-2">
                @Html.LabelFor(model => model.Introduction, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextAreaFor(model => model.Introduction, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter your introduction", @style = "border:2px solid green;" } })
                    @Html.ValidationMessageFor(model => model.Introduction, "", new { @class = "text-danger" })
                </div>
            </div>




            <div class="form-group text-center p-4">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="submit" class="btn btn-success" />
                </div>
            </div>
        </div>
        }
    </div>



</body>






<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
