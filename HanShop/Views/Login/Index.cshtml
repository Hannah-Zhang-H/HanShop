@* Han's Shopping Centre Staff/admin Log in page*@
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

<!DOCTYPE html>
<html lang="en">


<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Han's Shopping Centre</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link href="~/Content/myStyle.css" rel="stylesheet" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

</head>


<body class="cm-login staffloginBG" style="background-image: url(/Content/Resources/otherImgs/staffLogin.jpg); background-size: cover; ">
    <div class="text-center text-dark" style="padding: 90px 0 30px 0;  border-bottom: 1px solid #ddd;">
        @*<img src="" width="300" height="45">*@
        <h1 style="font-family:'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif"> Han's Shopping Centre Staff Log in </h1>
    </div>

    <div style="height:100px;">

    </div>
    <div class="col-sm-6 col-md-4 col-lg-3 " style="margin: 40px auto; float: none; ">
        @* action = "", if submit staff log in, controller -> LoginController  method-> Index method *@
        <form method="post" action="">
            <div class="col-xs-12">
                <div class="form-group">
                    <div class="input-group">
                        <div class="input-group-addon">
                            @*<i class="fa fa-fw fa-user"></i>*@
                            <span class="input-group-text" id="basic-addon1"><i class="bi bi-file-earmark-person"></i></span>
                        </div>
                        <input type="text" name="username" class="form-control" placeholder="Username">
                    </div>
                </div>
                <br />
                <div class="col-xs-6">
                    <div class="form-group">
                        <div class="input-group">
                            <div class="input-group-addon">
                                <span class="input-group-text" id="basic-addon1">
                                    <i class="bi bi-file-lock2"></i>
                                </span>
                            </div>
                            <input type="password" name="password" class="form-control" placeholder="Password" />
                        </div>
                    </div>

                </div>
            </div>

            <br />
            <div class="col-xs-12  text-center">
                <button type="submit" class="btn btn-block btn-primary">Sign in</button>
            </div>
        </form>
    </div>


    <div style="height:100px;">

    </div>

</body>


</html>



